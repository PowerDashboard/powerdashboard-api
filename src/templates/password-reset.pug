        line-height: 1.65;
    }
    img {
        max-width: 100%;
        margin: 0 auto;
        display: block;
    }
    body,
    .body-wrap {
        width: 100% !important;
        height: 100%;
        background: #f8f8f8;
    }
    a {
        color: #8249FB;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
    .text-center {
        text-align: center;
    }
    .text-right {
        text-align: right;
    }
    .text-left {
        text-align: left;
    }
    .button {
        display: inline-block;
        color: white;
        background: #8249FB;
        border: solid #8249FB;
